/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/
process {
    withName: ".*:RECONST_NODDI" {
        ext.para_diff     = params.para_diff
        ext.iso_diff      = params.iso_diff
        ext.noddi_lambda1 = params.noddi_lambda1
        ext.noddi_lambda2 = params.noddi_lambda2
        publishDir = [
            path: { meta.session ? "${params.outdir}/${meta.id}/${meta.session}/dwi/" : "${params.outdir}/${meta.id}/dwi/" },
            mode: params.publish_dir_mode,
            saveAs: {
                filename ->
                if ( filename.contains("fit_NDI.nii.gz") ) { "${meta.id}${meta.session}_model-noddi_param-icvf_dwimap.nii.gz" }
                else if ( filename.contains("fit_ODI.nii.gz") ) { "${meta.id}${meta.session}_model-noddi_param-od_dwimap.nii.gz" }
                else if ( filename.contains("fit_FWF.nii.gz") ) { "${meta.id}${meta.session}_model-noddi_param-fwf_dwimap.nii.gz" }
                else if ( filename.contains("fit_dir.nii.gz") ) { "${meta.id}${meta.session}_model-noddi_param-dir_dwimap.nii.gz" }
                else if ( filename.contains("fit_ECVF.nii.gz") ) { "${meta.id}${meta.session}_model-noddi_param-isovf_dwimap.nii.gz" }
                else if ( filename.contains("versions.yml") ) { null }
                else { params.clean_output ? null : filename }
            }
        ]
    }

    withName: ".*:RECONST_FREEWATER" {
        ext.b_thr           = params.dwi_shell_tolerance
        ext.para_diff       = params.para_diff
        ext.iso_diff        = params.iso_diff
        ext.perp_diff_min   = params.perp_diff_min
        ext.perp_diff_max   = params.perp_diff_max
        ext.fw_lambda1      = params.fw_lambda1
        ext.fw_lambda2      = params.fw_lambda2
        publishDir = [
            path: { meta.session ? "${params.outdir}/${meta.id}/${meta.session}/dwi/" : "${params.outdir}/${meta.id}/dwi/" },
            mode: params.publish_dir_mode,
            saveAs: {
                filename ->
                if ( filename.contains("freewater.nii.gz") ) { "${meta.id}${meta.session}_model-fw_param-fw_dwimap.nii.gz" }
                else if ( filename.contains("versions.yml") ) { null }
                else { params.clean_output ? null : filename }
            }
        ]
    }

    withName: ".*:FW_CORRECTED_DTIMETRICS" {
        ext.prefix = { "${meta.id}${meta.session}${meta.run}_desc-fwc" }
        ext.ad                  = true
        ext.evecs               = true
        ext.evals               = true
        ext.fa                  = true
        ext.ga                  = true
        ext.rgb                 = true
        ext.md                  = true
        ext.mode                = true
        ext.norm                = true
        ext.rd                  = true
        ext.tensor              = true
        ext.nonphysical         = true
        ext.pulsation           = true
        ext.residual            = true
        ext.max_dti_shell_value = params.max_dti_shell_value
        ext.dti_shells          = params.dti_shells

        publishDir = [
            path: { meta.session ? "${params.outdir}/${meta.id}/${meta.session}/dwi/" : "${params.outdir}/${meta.id}/dwi/" },
            mode: params.publish_dir_mode,
            saveAs: {
                filename ->
                if ( filename.contains("ad.nii.gz") ) { "${meta.id}${meta.session}_model-tensor_param-ad_desc-fwc_dwimap.nii.gz" }
                else if ( filename.contains("fa.nii.gz") ) { "${meta.id}${meta.session}_model-tensor_param-fa_desc-fwc_dwimap.nii.gz" }
                else if ( filename.contains("rd.nii.gz") ) { "${meta.id}${meta.session}_model-tensor_param-rd_desc-fwc_dwimap.nii.gz" }
                else if ( filename.contains("md.nii.gz") ) { "${meta.id}${meta.session}_model-tensor_param-md_desc-fwc_dwimap.nii.gz" }
                else if ( filename.contains("mode.nii.gz") ) { "${meta.id}${meta.session}_model-tensor_param-mode_desc-fwc_dwimap.nii.gz" }
                else if ( filename.contains("tensor.nii.gz") ) { "${meta.id}${meta.session}_model-tensor_param-tensor_desc-fwc_dwimap.nii.gz" }
                else if ( filename.contains("rgb.nii.gz") ) { "${meta.id}${meta.session}_model-tensor_param-rgb_desc-fwc_dwimap.nii.gz" }
                else if ( filename.contains("ga.nii.gz") ) { "${meta.id}${meta.session}_model-tensor_param-ga_desc-fwc_dwimap.nii.gz" }
                else if ( filename.contains("versions.yml") ) { null }
                else { params.clean_output ? null : filename }
            }
        ]
    }
}
